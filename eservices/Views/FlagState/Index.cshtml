@model IEnumerable<Pattern_of_life.Models.Entity.FlagState>
<div class="container mt-5">
    <div class="card">
        <div class="card-header  text-white">
            <h5 class="mb-0">Flag States</h5>
        </div>
        <div class="card-body">
            <a href="@Url.Action("Create", "FlagState")" class="btn btn-outline-info mb-3"><i class="la la-plus"></i> Add </a>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flagState in Model)
                    {
                        <tr>
                            <td>@flagState.Name</td>
                            <td>
                                <a class="btn btn-primary" href="@Url.Action("Edit", "FlagState", new { id = flagState.ID })">
                                    <i class="la la-pencil-square"></i> <!-- Grgich icon for edit -->
                                </a>
                                <form class="d-inline" asp-action="Delete" asp-route-id="@flagState.ID" method="post">
                                    <button type="submit" class="btn btn-danger delete-btn">
                                        <i class="la la-trash"></i> <!-- Grgich icon for delete -->
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var form = $(this).closest('form');
            var vesselTypeId = form.attr('data-id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    </script>
}
