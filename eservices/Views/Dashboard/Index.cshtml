
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 5 Registered Ships</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cairo&display=swap">
    <style>


        .container {
            text-align: center;
        }

        h2 {
            color: #333;
        }

        canvas {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>

    <div class="container">
        <h2>Top 5 Registered Ships</h2>
        <canvas id="shipChart"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('shipChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [@foreach (var ship in Model)
        {
            <text>'@Html.Raw(ship.ShipName)', </text>
        }],
                        datasets: [{
                    label: 'Number of Activities',
                    data: [@foreach (var ship in Model)
        {
            <text>@ship.ActivitiesCount, </text>
        }],
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                        }]
                    },
            options: {
                plugins: {
                    legend: {
                        labels: {
                            font: {
                                family: 'Cairo, sans-serif'
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

